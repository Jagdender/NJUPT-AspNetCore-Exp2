@model User

@{
    ViewData["Title"] = "Result";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h3>User Information</h3>
        </div>
        <div class="card-body">
            <h4 class="card-title">Name: @Model.Name</h4>
            <p class="card-body">
                <a asp-controller="User" asp-action="Details" asp-route-id="@Model.Id">
                    Attending Parties
                </a>
            </p>
        </div>
    </div>
</div>
